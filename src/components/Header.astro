--- 
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>

    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
     <!-- <HeaderLink href="/blog">Blog</HeaderLink> -->
      <HeaderLink href="/books">Books</HeaderLink>
    </div>

    <div class="social-links">
      <!-- Single envelope icon linking to email -->
      <a href="mailto:support@optimaleducation.net" aria-label="Email me">
        <!-- Simple envelope SVG (fill uses currentColor → so it will be black) -->
        <svg
          viewBox="0 0 24 24"
          width="32"
          height="32"
          aria-hidden="true"
          fill="currentColor"
        >
          <path d="M2 4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h20a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2H2zm20 2v.511l-10 6.25-10-6.25V6h20zM2 18V8.489l10 6.25 10-6.25V18H2z" />
        </svg>
      </a>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }
  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }

  /* “social-links” now just wraps the single envelope link */
  .social-links,
  .social-links a {
    display: flex;
  }

  /* If you still want to hide “social-links” on mobile */
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
